@model StephenKingFanSite.Models.Genre

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Genre</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Code)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Code)
        </dd>   
        <dt class="col-sm-2">
          
        </dt>
        <!--remove if can't get controller right-->
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Novel</th>
                    <th>Rating</th>
                </tr>
                @foreach (var item in Model.Novels)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Rating)
                        </td>
                    </tr>
                }
            </table>
        </dd>
        <dt class="col-sm-2">
          
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Movie</th>
                    <th>Rating</th>
                </tr>
                @foreach (var item in Model.Movies)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Rating)
                        </td>
                    </tr>
                }
            </table>
        </dd>
        <!--DO NOT DELETE PAST HERE!-->
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
